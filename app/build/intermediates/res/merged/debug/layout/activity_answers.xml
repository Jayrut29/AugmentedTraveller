<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <Button
        android:id="@+id/aa_button_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_green"
        android:padding="10dp"
        android:text="Reply"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/aa_layout_question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aa_button_reply"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_green"
        android:padding="1dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/aa_textview_asked_by"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Jayrut"
                android:textColor="#348B48"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aa_textview_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="bnksdgjie gsdkfmskl dfgdfveskdlf bdfbdrgdf erghrfgvsd mkn bnksdgjie gsdkfmskl dfgdfveskdlf bdfbdrgdf erghrfgvsd mkn bnksdgjie gsdkfmskl dfgdfveskdlf bdfbdrgdf erghrfgvsd mkn"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_no_of_reply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aa_layout_question"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE"
        android:padding="10dp" >

        <TextView
            android:id="@+id/aa_textview_no_of_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="14 Replies"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/aa_listview_answers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_no_of_reply" >
    </ListView>

</RelativeLayout>